<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>
<div class="row">
  <div class="span8">
    <% if @user.contacts.any? %>
      <h3>Contacts (<%= @user.contacts.count %>)</h3>
      <ol class="contacts">
        <%= render @contacts %>
      </ol>
      <%= will_paginate @contacts %>
    <% end %>
  </div>
</div>