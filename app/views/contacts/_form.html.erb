
<%= form_for(@contact) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
 <br>
 <br>
 <h3>Add a Contact</h3>
  <div class="field">
    <%= f.text_field :first_name, placeholder: "First Name..." %>
  </div>
  <div class="field">
    <%= f.text_field :last_name, placeholder: "Last Name..." %>
  </div>
  <div class="field">
	<%= f.select :user_id, User.all.collect {|p| [ p.name, p.id ] }, :selected => current_user.id %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>

  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>