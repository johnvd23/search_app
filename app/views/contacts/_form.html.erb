
<%= form_for(@contact) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <table>
	  <tr><td><b>Contact Name</b></td></tr>
	  <tr>
		  <td><%= f.text_field :first_name, placeholder: "First Name..." %></td>
		  <td><%= f.text_field :last_name, placeholder: "Last Name..." %></td>
	  </tr>
	  	  <tr><td><b>Address</b></td></tr>
	  <tr>
		  <td>
    		  <%= f.text_field :street, placeholder: "Street Address..." %>
  		  </td>
		  
	  	<td>
    		<%= f.text_field :street_2, placeholder: "Apt..." %>
		</td>
	</tr>
  	<tr>
	  	<td>
    		<%= f.text_field :city, placeholder: "City..." %>
		</td>
	</tr>
	  <tr>
		  <td><%= f.text_field :state, placeholder: "State..." %></td>
		  <td><%= f.text_field :zip, placeholder: "Zip..." %></td>
	  </tr>
	  	  <tr><td><b>Phone/VP/Email</b></td></tr>
	  <tr>
		  <td><%= f.text_field :phone, placeholder: "Phone Number..." %></td>
		  <td><%= f.text_field :phone_2, placeholder: "VP Number..." %></td>
	  </tr>
	  <tr> 
	  	<td><%= f.text_field :email, placeholder: "Email..." %></td>
		<td></td>
	</tr>
</table>
	<tr>
<b>Assign to Publisher</b><%= f.select :user_id, User.all.collect {|p| [ p.name, p.id ] }, :selected => current_user.id %>

  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_area :note %>
  </div>
  <div class="field">
	<%= f.label "Confirmed Deaf?" %><br>
	<%= f.check_box :confirmed %>
  </div>
  <div class="field">
	<%= f.label "Did they move?" %><br>
	<%= f.check_box :moved %>
  </div>
  <div class="field">
	<%= f.label "Do not call?" %><br>
	<%= f.check_box :do_not_call %>
  </div>

  <%= f.submit "Save", class: "btn btn-large btn-primary" %>
<% end %>

